<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:background="@color/lightgray"
            android:id="@+id/RRtoolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            >

            <RelativeLayout
                android:id="@+id/RRback"
                android:layout_alignParentLeft="true"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/back">

                </ImageView>

            </RelativeLayout>

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Filter"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/RRSearch"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/refresh">

                </ImageView>

            </RelativeLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:padding="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage and set your preferences to find the best matches for you, keep enjoying!"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <TextView
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Should not"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <EditText
                    android:textColorHint="@color/gray"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:hint="Woman"
                    android:drawableRight="@drawable/drpdwn_icon"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/border_black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:singleLine="true">

                </EditText>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Want to Meet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <EditText
                    android:textColorHint="@color/gray"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:hint="Woman"
                    android:drawableRight="@drawable/drpdwn_icon"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/border_black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:singleLine="true">

                </EditText>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Preferred Age Range"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <EditText
                    android:textColorHint="@color/gray"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:hint="Woman"
                    android:drawableRight="@drawable/drpdwn_icon"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/border_black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:singleLine="true">

                </EditText>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Preferred Language(s)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <EditText
                    android:textColorHint="@color/gray"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:hint="English, French, Bengali"
                    android:drawableRight="@drawable/drpdwn_icon"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/border_black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:singleLine="true">

                </EditText>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <EditText
                    android:textColorHint="@color/gray"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:drawableRight="@drawable/drpdwn_icon"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/border_black"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:singleLine="true">

                </EditText>


                <TextView
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="Distance Range"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <TextView
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0 - 10 km"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />

                <SeekBar
                    android:outlineSpotShadowColor="@color/black"
                    android:outlineAmbientShadowColor="@color/black"
                    android:shadowColor="@color/black"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </SeekBar>


                <RelativeLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/RLogin"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    android:background="@drawable/border_btn">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20sp"
                        android:text="@string/apply_filters"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16sdp"
                        />

                </RelativeLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</layout>
